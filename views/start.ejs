<% include partials/menu-header %>

		<div class="container fill menu">
			<div class="max-width row top-bar">
				<% if ( currentUser ) { %>
					<div class="text-container">
						<label>
							<%= currentUser.username %>
						</label>
					</div>
					<a href="/user/logout">
						<i class="green fa fa-user-circle-o mini" aria-hidden="true"></i>
					</a>
				<% } else { %>
					<a href="/user">
						<i class="fa fa-user-circle-o mini" aria-hidden="true"></i>
					</a>
				<% } %>
			</div>
			<div class="fill main row spaced">
				<div class="labeled-icon">
					<i id="help" class="fa fa-question-circle large" aria-hidden="true"></i>
					<label for="help" id="helpLabel">Help</label>
				</div>

				<div class="labeled-icon">
					<a href="/game">
						<i id="play" class="fa fa-play-circle-o large" aria-hidden="true"></i>
					</a>
					<label for="play" id="playLabel">Play</label>
				</div>

				<div class="labeled-icon">
					<i id="levels" class="fa fa-th-large large" aria-hidden="true"></i>
					<label for="levels" id="levelsLabel">Levels</label>
				</div>
			</div>
		</div>

<% include partials/menu-footer %>